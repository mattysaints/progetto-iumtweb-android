<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/touch_layout"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#edf0fa"
        android:elevation="4dp"
        android:padding="2dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="Docente :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Corso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Docente"
                android:layout_marginTop="0dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Corso : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Giorno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ora"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Giorno : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Ora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="right"
                android:paddingVertical="20dp"
                android:paddingLeft="70dp"
                android:text="Ora : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DocenteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/Docente"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/CorsoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DocenteText"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/Corso"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/OraText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/Ora"
                android:gravity="right"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/GiornoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/OraText"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/Giorno"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="TextView" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>